begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "mochi"
    gem.summary = "Mochi Bridge implementation for Rails3 (www.mochimedia.com)"
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
    gem.author = "Damian Nurzynski (dnurzynski)"
    gem.email = "dnurzynski@gmail.com"
    gem.homepage = "http://github.com/dnurzynski/mochi"
    # other fields that would normally go in your gemspec
    # like authors, email and has_rdoc can also be included here
    gem.add_dependency 'happymapper'
  end
rescue
  puts "Jeweler or one of its dependencies is not installed."
end

